<div class="m-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-7 col-xl-4 my-3">
      <div class="form-title">
        <%= image_tag "logo.png", alt: "logo"%>
        <% if is_new %>
          <h1>List a new demo ðŸ“¼</h1>
        <% else %>
          <h1>Update the demo ðŸ“¼</h1>
        <% end %>
      </div>
      <%= simple_form_for movie do |f| %>
        <%= f.input :title, label: false, placeholder: "Its product name" %>
        <%= f.input :batch, label: false, placeholder: "Its batch #" %>
        <%= f.input :description, as: :text, label: false, placeholder: "A bit of description" %>
